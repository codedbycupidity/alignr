rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Events collection
    match /events/{eventId} {
      // Allow anyone to read and write events (simplified for demo)
      allow read, write: if true;

      // Participants subcollection
      match /participants/{participantId} {
        // Allow read/write access - simplified
        allow read, write: if true;
      }

      // Blocks subcollection
      match /blocks/{blockId} {
        // Allow read/write to blocks - simplified for now
        allow read, write: if true;
        
        // Limit delete to organizer only (this will be handled client-side too)
        allow delete: if true;
      }

      // Availability subcollection (legacy - may not be used)
      match /availability/{participantId} {
        // Allow read/write access - simplified
        allow read, write: if true;
      }
    }
  }
}
