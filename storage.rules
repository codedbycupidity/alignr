rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Events album images
    match /events/{eventId}/album/{allImages=**} {
      // Allow public read access for images (download URLs with tokens)
      // This allows <img> tags to load images without authentication
      allow read: if true;

      // Require authentication for write and delete (phone auth or anonymous)
      allow write, delete: if request.auth != null;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
